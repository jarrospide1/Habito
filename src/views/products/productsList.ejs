 <body>


<!------------ HEADER------------------- -->
        <%- include('../partials/headerSearchBar')%>

  <!--------------- BANNER------------------- -->

        <%- include('../partials/banner')  %>
      
            <!-- Acá arranca el Main-->
<main>
             
<section class="products-container" >

         <h1 class="categories"><%=categoryName.name%></h1>


                  <% for (let i = 0; i<productsList.length; i++) {%>
                    
                    <article class="product2" >
                        
                        <a class="a-product-list"  href="/products/detail/<%=productsList[i].id%>">
                         
                       

                            <div class="img-container">
                                <img src="/uploads/products/<%=productsList[i].image1%>" alt=" <%=productsList[i].categories%>" >
                            </div>



                            <div class="product-info">

                                <div class="product-info-lef-container">

                                    <span class="product-name"> <%=productsList[i].name%></span>

                                   <span class="product-price">
                                        $ <%=productsList[i].price%>
                                    </span> 

                                </div >

                                <div class="product-info-right-container">
                                   <span class="product-discount">
                                       
                                    <% if (productsList[i].discount>0) { %>
        
                                        <%=productsList[i].discount%> % OFF 
                                       
                                       <% } %>

                                      </span> 

                                </div>
                               

                                

                            </div>
                          
                        
                          
                            
                        </a>

                            <div class="add-To-Cart-Container">
                                <span class="material-icons">
                                    shopping_cart
                                    </span>
                            </div>
                            
                          
                        </article>
                    <% } %>

</section >

<!-- --------------------NEWSLETTER--------------------- -->
          <%- include('../partials/newsletter')  %>
             
<!-- --------------------FOOTER--------------------- -->
            </main>
            <%- include('../partials/footer2')  %>
