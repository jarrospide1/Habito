<%- include('../partials/head', {
    pageTitle: 'Mi carrito',
    cssLink: 'href="/css/productCart.css" '
})%>

    <body>
        <%- include('../partials/header2')%>
        <main class="estructura">
            <nav class="lefts">
                <div class="email-ofertas">
                    <form action="" method="get"></form>
                    <input type="text" name="novedades" placeholder="e-mail" class="inputs" required>
                    <div class="recibir-ofertas">
                        <input type="checkbox" name="recibirOfertas" value="recibirOfertas" id="recibirOfertas">
                        <label for="recibirOfertas">Quiero recibir ofertas y novedades en mi correo.</label>
                    </div>
                    </form>
                </div>
                <h2>Datos de env√≠o</h2>
                <nav class="datos">
                    <form action="" method="get">
                        <div>
                            <input type="text" name="nombre" placeholder="Nombre" class="inputs" required>
                        </div>
                        <div>
                            <input type="text" name="apellido" placeholder="Apellido" class="inputs" required>
                        </div>
                        <div>
                            <input type="text" name="direccion" placeholder="Direccion" class="inputs" required>
                        </div>
                        <div>
                            <input type="text" name="provincia" placeholder="Provincia" class="inputs" required>
                        </div>
                        <div>
                            <input type="text" name="localidad" placeholder="Localidad" class="inputs" required>
                            <input type="number" name="codigoPostar" placeholder="Codigo Postal" class="inputs" required>
                        </div>
                        <div>
                            <input type="number" name="telefono" placeholder="Telefono" class="inputs">
                        </div>
                        <div class="save-info">
                            <input type="checkbox" name="guardarDatosDeEnvio" id="guardarDatos" value="GuardarMisDatosDeEnvio">
                            <label for="guardarDatos">Guardar informacion para proximas compras</label>
                        </div>
                    </form>
                </nav>
            </nav>
            <nav class="right">
                <nav class="carts">
                    <nav class="cart">
                        <h2 class="productos">Productos</h2>
                        <div class="product-price">
                            <p class="product">1X Remeras</p>
                            <p class="price">$1700</p>
                        </div>
                        <div class="img-cart-container">
                            <img src="../img/productosHome/img-producto-home-remeras.jpg" alt="" class="img-cart">
                        </div>
                        <div>
                            <p class="talle">M</p>
                        </div>
                        <div class="color-quitar">
                            <p class="color"><i class="fas fa-dot-circle"></i></p>
                            <form action="" method="get" class="button-quitar">
                                <button type="submit" class="button-quitar">quitar</button>
                            </form>
                        </div>
                    </nav>
                    <nav class="cart">
                        <div class="product-price">
                            <p class="product">1X Shorts</p>
                            <p class="price">$2500</p>
                        </div>
                        <div class="img-cart-container">
                            <img src="../img/productosHome/img-producto-home-short.jpg" alt="" class="img-cart">
                        </div>
                        <div>
                            <p class="talle">L </p>
                        </div>
                        <div class="color-quitar">
                            <p class="colors"><i class="fas fa-dot-circle"></i></p>
                            <form action="" method="get" class="button-quitar">
                                <button type="submit" class="button-quitar">quitar</button>
                            </form>
                        </div>
                    </nav>
                </nav>
                <div class="discount">
                    <form action="" method="get" class="discount-input">
                        <input type="text" name="codigoDescuento" placeholder="Codigo de descuento" id="codigoDescuento">
                        <button type="submit" class="button-discount">Aplicar</button>
                    </form>
                </div>
                <nav>
                    <div class="subtotal-price">
                        <p>Subtotal</p>
                        <p class="price">$4200</p>
                    </div>
                    <div class="envio-price">
                        <p>Envio</p>
                        <p class="price">$500</p>
                    </div>
                    <div class="total-price">
                        <p>TOTAL</p>
                        <p class="price">$4700</p>
                    </div>
                    <div class="buys">
                        <form action="" method="get" class="buy">
                            <button type="submit" class="button-buy">COMPRAR</button>
                        </form>
                    </div>
                </nav>
            </nav>
        </main>
        <%- include('../partials/footer2')  %>
    </body>

    </html>